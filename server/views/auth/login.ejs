<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
<h1 class="text-white">Place holder</h1>
<main  class="container bg-dark" style="height: 500px;">
    <!-- Message Area -->
    <% if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>

    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1 class="text-info">Please Login</h1>
            <form method="POST" autocomplete="off">
                <div class="form-group">
                    <div class="input-group mb-1">
                        <span class="input-group-addon">
                        <i class="fas fa-user-circle fa-3x mr-1 mb-1" style="color:darkcyan">
                        </i>
                        </span>
                        <input type="text" class="form-control" id="username" name="username"  required
                        value="" placeholder="Enter your username">
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group mb-2">
                        <span class="input-group-addon">
                        <i class="fas fa-user-lock fa-2x mr-1 mb-1" style="color: darkcyan;">

                        </i>
                        </span>
                        <input type="password" class="form-control" id="password" name="password"  required
                        value="" placeholder="Enter your password">
                    </div>
                </div> 

                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Login">
                    <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>

            </form>
            <p class="text-center text-muted small ">
                Don't have an account? 
                <a class="text-info" href="/register">Register Here!</a>
            </p>
        </div>
    </div>

</main>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>